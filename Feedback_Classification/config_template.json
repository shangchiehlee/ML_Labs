{
    "schema_version": "1.1",
    "subscription_id": "<YOUR_SUBSCRIPTION_ID>",
    "resource_group": "<YOUR_RESOURCE_GROUP>",
    "workspace_name": "<YOUR_WORKSPACE_NAME>",
    "compute_name": "<YOUR_COMPUTE_INSTANCE>",
    "job_base_name": "feedback_classification_prediction",
    "operational_settings": {
        "training_timeout_seconds": 86400,
        "batch_size": 5000,
        "enable_json_logging": true,
        "dry_run_rows": 2000,
        "azureml_environment": "azureml://registries/azureml/environments/sklearn-1.5/labels/latest",
        "experiment_name": "train_model_feedback_classification",
        "registered_model_name": "feedback_classification_model"
    },
    "inference_settings": {
        "n_jobs": 2,
        "row_size_estimate_bytes": 2048
    },
    "training_hyperparameters": {
        "n_features": 1048576,
        "c_parameter": 1.0,
        "epochs": 5,
        "test_train_ratio": 0.2
    },
    "feature_definitions": {
        "input_path": "inputs/feedback_stream_raw.csv",
        "text_column": "Text",
        "label_column": "Score",
        "positive_threshold": 3
    },
    "output_schema_expectations": {
        "required_columns": [
            "Id",
            "Text",
            "Predicted_Sentiment",
            "Confidence_Score"
        ],
        "dtypes": {
            "Predicted_Sentiment": "int64",
            "Confidence_Score": "float64"
        }
    }
}